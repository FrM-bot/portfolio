---
import { cn } from '@/utils'
import type { HTMLAttributes } from 'astro/types'

const VARIANTS = {
  gradient:
    'bg-transparent cursor-pointer duration-200 py-[.2em] text-center hover:text-white px-[.6em] relative before:bg-white before:absolute before:top-full before:left-0 before:h-[1px] before:w-1/6 hover:before:w-full before:duration-200 after:shadow-xl after:duration-200 after:absolute after:top-full after:left-0 after:bottom-0 after:h-[1px] after:w-full after:bg-white/10',
  default: '',
  text: 'hover:[text-shadow:white_2px_-2px] dark:text-white/90 hover:text-white/30 duration-200 cursor-pointer',
  rounded: 'px-6 py-1 rounded-full grid place-content-center hover:bg-dark-v2 duration-200',
}

type Props = HTMLAttributes<'a'> & {
  variant?: keyof typeof VARIANTS
}

const { variant = 'default', ...props } = Astro.props as Props

const className = cn(VARIANTS[variant], props.class ?? '')
---

<a
  href={props.href}
  class={className}
  {...props}
>
  <slot />
</a>
