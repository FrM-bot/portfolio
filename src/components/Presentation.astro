---
import presentation from "@/data/presentation"
import SocialLinks from "./SocialLinks.astro"
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag"
import Link from "./Link.astro"
---

<article
  class='flex flex-col gap-8 md:flex-row-reverse md:justify-end md:gap-12'
>
  {
    presentation.profile && (
      <div class="flex flex-col gap-3 h-full items-center">
        <picture class='w-1/2 self-center rounded-full overflow-hidden border-b-2 border-neutral-700 hover:border-neutral-400 duration-200 shadow-lg hover:shadow-white/5'>
          <img src={presentation.profile} />
        </picture>
        <Link href='mailto:damianmaciel0@gmail.com' variant='gradient' class='w-fit font-semibold text-lg'>
          Let's talk
        </Link>
      </div>
    )
  }

  <div class='flex flex-col gap-5'>
    <div class='flex flex-col'>
      <p>Hi, Iâ€™m</p>
      <h1
        class='text-5xl bg-gradient-to-r from-primary to-secondary bg-clip-text font-semibold text-transparent w-fit'
      >
        {presentation.title}
      </h1>
    </div>

    <h2
      class='w-auto max-w-[60ch] leading-6'
      set:html={convertAsteriskToStrongTag(presentation.description)}
    />

    <SocialLinks />
  </div>
</article>
